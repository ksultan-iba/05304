      <Button fx:id="9" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Button fx:id="decimal" mnemonicParsing="false" onAction="#decimalPressed" prefHeight="50.0" prefWidth="55.0" text="." GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <Button fx:id="equals" mnemonicParsing="false" onAction="#equalsPressed" prefHeight="50.0" prefWidth="110.0" text="=" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      <Button fx:id="divide" mnemonicParsing="false" onAction="#dividePressed" prefHeight="50.0" prefWidth="55.0" text="/" GridPane.columnIndex="3" GridPane.rowIndex="5" />
      <Button fx:id="multiply" mnemonicParsing="false" onAction="#multiplyPressed" prefHeight="50.0" prefWidth="55.0" text="x" GridPane.columnIndex="3" GridPane.rowIndex="4" />
      <Button fx:id="minus" mnemonicParsing="false" onAction="#subtractPressed" prefHeight="50.0" prefWidth="55.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <Button fx:id="add" mnemonicParsing="false" onAction="#addPressed" prefHeight="50.0" prefWidth="55.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      <Button fx:id="clear" mnemonicParsing="false" onAction="#clearPressed" prefHeight="50.0" prefWidth="110.0" text="Clear" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="6" />
      <!-- keep TextField below buttons-->
      <TextField fx:id="textField" layoutX="220.0" layoutY="110.0" GridPane.columnSpan="4" />
      <Button fx:id="del" mnemonicParsing="false" onAction="#delPressed" prefHeight="50.0" prefWidth="110.0" text="Del" GridPane.columnSpan="2" GridPane.rowIndex="6" />

