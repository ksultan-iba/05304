<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myCalc.Main">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>
   <children>



      <Button fx:id="0" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="110.0" text="0" GridPane.rowIndex="5" />
      <Button fx:id="1" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="1" GridPane.rowIndex="2" />
      <Button fx:id="2" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="3" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button fx:id="4" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="4" GridPane.rowIndex="3" />
      <Button fx:id="5" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="6" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button fx:id="7" mnemonicParsing="false" onAction="#numberPressed" prefHeight="50.0" prefWidth="55.0" text="7" GridPane.rowIndex="4" />
